<Window x:Class="u2AidanMcClungTshirt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u2AidanMcClungTshirt"
        mc:Ignorable="d"
        Title="Tshirt Generator *variable*" Height="500" Width="500" WindowState="Maximized">
    <ScrollViewer>
        <Grid x:Name="myGrid">
        <Label x:Name="lblNote" Content="Enter a number less than 10"/>
        <TextBox x:Name="txtInput" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0"/>
        <Button x:Name="btnRun" Click="btnRun_Click" Content="Generate item(s)" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <StackPanel x:Name="shirtCanvas" Margin="10,80,0,0" HorizontalAlignment="Center">
            
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
